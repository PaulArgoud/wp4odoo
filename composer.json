{
	"name": "wp4odoo/wp4odoo",
	"description": "WordPress connector for Odoo ERP",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=8.2"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0 || ^11.0",
		"phpstan/phpstan": "^2.1",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"wp-coding-standards/wpcs": "*",
		"dealerdirect/phpcodesniffer-composer-installer": "*",
		"yoast/phpunit-polyfills": "^3.0"
	},
	"autoload-dev": {
		"psr-4": {
			"WP4Odoo\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "@php vendor/bin/phpunit",
		"phpcs": "@php vendor/bin/phpcs",
		"phpstan": "@php -d memory_limit=1G vendor/bin/phpstan analyse --memory-limit=1G",
		"check": [
			"@phpcs",
			"@test",
			"@php -d memory_limit=1G vendor/bin/phpstan clear-result-cache --memory-limit=1G",
			"@phpstan"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
